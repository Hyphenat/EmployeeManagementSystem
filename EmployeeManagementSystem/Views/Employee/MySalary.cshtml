@model IEnumerable<EmployeeManagementSystem.Models.Payslip>

@{
    ViewData["Title"] = "My Salary";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-gradient">
                    <i class="fas fa-money-bill-wave me-2"></i>My Salary Details
                </h2>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Employee Info -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3">Employee Information</h5>
                            <p class="mb-2"><strong>Name:</strong> @ViewBag.Employee.FirstName @ViewBag.Employee.LastName</p>
                            <p class="mb-2"><strong>Position:</strong> @ViewBag.Employee.Position</p>
                            <p class="mb-2"><strong>Department:</strong> @ViewBag.Employee.Department</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h5 class="mb-3">Salary Details</h5>
                            <p class="mb-2"><strong>Basic Salary:</strong> ?@ViewBag.Employee.BasicSalary.ToString("N0")</p>
                            <p class="mb-2"><strong>Joining Date:</strong> @ViewBag.Employee.JoiningDate.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Year Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-10">
                            <label class="form-label">Select Year</label>
                            <select name="year" class="form-select">
                                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                                {
                                    <option value="@y" selected="@(y == ViewBag.SelectedYear)">@y</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter me-2"></i>Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Payslips Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Payslips for Year @ViewBag.SelectedYear
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Month</th>
                                        <th>Basic Salary</th>
                                        <th>Bonus</th>
                                        <th>Deductions</th>
                                        <th>Net Salary</th>
                                        <th>Present Days</th>
                                        <th>Working Days</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payslip in Model)
                                    {
                                        <tr>
                                            <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(payslip.Month) @payslip.Year</td>
                                            <td>?@payslip.BasicSalary.ToString("N0")</td>
                                            <td>?@payslip.Bonus.ToString("N0")</td>
                                            <td class="text-danger">?@payslip.Deductions.ToString("N0")</td>
                                            <td class="fw-bold text-success">?@payslip.NetSalary.ToString("N0")</td>
                                            <td>@payslip.PresentDays</td>
                                            <td>@payslip.WorkingDays</td>
                                            <td>
                                                @if (payslip.Status == "Paid")
                                                {
                                                    <span class="badge bg-success">@payslip.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@payslip.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Payslip" asp-action="ViewPayslip" asp-route-id="@payslip.PayslipId" 
                                                   class="btn btn-sm btn-primary" title="View Payslip">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-info">
                                        <td><strong>Total</strong></td>
                                        <td><strong>?@Model.Sum(p => p.BasicSalary).ToString("N0")</strong></td>
                                        <td><strong>?@Model.Sum(p => p.Bonus).ToString("N0")</strong></td>
                                        <td class="text-danger"><strong>?@Model.Sum(p => p.Deductions).ToString("N0")</strong></td>
                                        <td class="fw-bold text-success"><strong>?@Model.Sum(p => p.NetSalary).ToString("N0")</strong></td>
                                        <td colspan="4"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-file-invoice"></i>
                            <h4 class="mt-3">No Payslips Found</h4>
                            <p class="text-muted">No payslips have been generated for the selected year.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
