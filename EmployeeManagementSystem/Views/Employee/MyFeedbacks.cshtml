@model IEnumerable<EmployeeManagementSystem.Models.Feedback>

@{
    ViewData["Title"] = "My Feedbacks";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-gradient">
                    <i class="fas fa-comments me-2"></i>My Feedbacks
                </h2>
                <div>
                    <a asp-controller="Employee" asp-action="SubmitFeedback" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Submit New Feedback
                    </a>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Feedback Statistics -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card bg-gradient-warning text-white shadow-sm">
                <div class="card-body">
                    <h6 class="text-uppercase mb-2">Pending</h6>
                    <h3 class="mb-0">@Model.Count(f => f.Status == "Pending")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-gradient-info text-white shadow-sm">
                <div class="card-body">
                    <h6 class="text-uppercase mb-2">Reviewed</h6>
                    <h3 class="mb-0">@Model.Count(f => f.Status == "Reviewed")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-gradient-success text-white shadow-sm">
                <div class="card-body">
                    <h6 class="text-uppercase mb-2">Resolved</h6>
                    <h3 class="mb-0">@Model.Count(f => f.Status == "Resolved")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Feedbacks List -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>All Feedbacks
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        @foreach (var feedback in Model)
                        {
                            <div class="card mb-3 hover-card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h5 class="card-title">
                                                <i class="fas fa-envelope-open-text me-2 text-primary"></i>
                                                @feedback.Subject
                                            </h5>
                                            <p class="card-text">@feedback.Message</p>
                                            <p class="text-muted mb-0">
                                                <i class="fas fa-calendar me-2"></i>
                                                Submitted on: @feedback.SubmittedDate.ToString("dd MMM yyyy, hh:mm tt")
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <div class="mb-3">
                                                @if (feedback.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-clock me-1"></i>@feedback.Status
                                                    </span>
                                                }
                                                else if (feedback.Status == "Reviewed")
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-eye me-1"></i>@feedback.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle me-1"></i>@feedback.Status
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(feedback.AdminResponse))
                                    {
                                        <hr />
                                        <div class="alert alert-info mb-0">
                                            <h6 class="alert-heading">
                                                <i class="fas fa-reply me-2"></i>Admin Response:
                                            </h6>
                                            <p class="mb-0">@feedback.AdminResponse</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-comments"></i>
                            <h4 class="mt-3">No Feedbacks Yet</h4>
                            <p class="text-muted">You haven't submitted any feedback yet.</p>
                            <a asp-controller="Employee" asp-action="SubmitFeedback" class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-2"></i>Submit Your First Feedback
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
