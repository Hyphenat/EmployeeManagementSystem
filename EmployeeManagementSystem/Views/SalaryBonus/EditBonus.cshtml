@model EmployeeManagementSystem.Models.SalaryBonus

@{
    ViewData["Title"] = "Edit Bonus";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-gradient">
                    <i class="fas fa-edit me-2"></i>Edit Bonus
                </h2>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Bonuses
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-gift me-2"></i>Edit Bonus Details
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="EditBonus" method="post">
                        <input type="hidden" asp-for="BonusId" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EmployeeId" class="form-label"></label>
                                <select asp-for="EmployeeId" class="form-select" required>
                                    <option value="">Select Employee</option>
                                    @foreach (var emp in ViewBag.Employees as IEnumerable<EmployeeManagementSystem.Models.Employee>)
                                    {
                                        <option value="@emp.EmployeeId">@emp.FirstName @emp.LastName - @emp.Position</option>
                                    }
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BonusType" class="form-label"></label>
                                <select asp-for="BonusType" class="form-select" required>
                                    <option value="">Select Bonus Type</option>
                                    <option value="Performance">Performance</option>
                                    <option value="Festival">Festival</option>
                                    <option value="Annual">Annual</option>
                                    <option value="Project">Project</option>
                                    <option value="Retention">Retention</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="BonusType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Amount" class="form-label"></label>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" required />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BonusDate" class="form-label"></label>
                                <input asp-for="BonusDate" class="form-control" type="date" required />
                                <span asp-validation-for="BonusDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter bonus description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i>Update Bonus
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
