@model EmployeeManagementSystem.Models.SalaryBonus

@{
    ViewData["Title"] = "Add Bonus";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="fw-bold"><i class="fas fa-gift me-2"></i>Add Bonus</h2>
            <a asp-controller="SalaryBonus" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-gradient-success text-white">
                <h5 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Bonus Details</h5>
            </div>
            <div class="card-body p-4">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-controller="SalaryBonus" asp-action="AddBonus" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="EmployeeId" class="form-label">
                                <i class="fas fa-user me-2"></i>Employee <span class="text-danger">*</span>
                            </label>
                            <select asp-for="EmployeeId" class="form-select" required>
                                <option value="">Select Employee</option>
                                @if (ViewBag.Employees != null)
                                {
                                    @foreach (var emp in ViewBag.Employees as IEnumerable<EmployeeManagementSystem.Models.Employee>)
                                    {
                                        <option value="@emp.EmployeeId">@emp.FirstName @emp.LastName - @emp.Position (@emp.Department)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="BonusType" class="form-label">
                                <i class="fas fa-tag me-2"></i>Bonus Type <span class="text-danger">*</span>
                            </label>
                            <select asp-for="BonusType" class="form-select" required>
                                <option value="">Select Bonus Type</option>
                                <option value="Performance">Performance</option>
                                <option value="Festival">Festival</option>
                                <option value="Annual">Annual</option>
                                <option value="Project">Project Completion</option>
                                <option value="Retention">Retention</option>
                                <option value="Referral">Referral</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="BonusType" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label">
                                <i class="fas fa-rupee-sign me-2"></i>Amount <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Amount" type="number" step="0.01" min="0" class="form-control" placeholder="Enter amount" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="BonusDate" class="form-label">
                                <i class="fas fa-calendar me-2"></i>Bonus Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="BonusDate" type="date" class="form-control" required />
                            <span asp-validation-for="BonusDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-comment me-2"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter bonus description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save me-2"></i>Save Bonus
                        </button>
                        <a asp-controller="SalaryBonus" asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}