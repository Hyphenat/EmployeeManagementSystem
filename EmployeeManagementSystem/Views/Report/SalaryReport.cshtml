@model IEnumerable<EmployeeManagementSystem.Models.Payslip>

@{
    ViewData["Title"] = "Salary Report";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-gradient">
                    <i class="fas fa-file-invoice-dollar me-2"></i>Salary Report
                </h2>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Reports
                </a>
            </div>
        </div>
    </div>

    <!-- Month/Year Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-5">
                            <label class="form-label">Month</label>
                            <select name="month" class="form-select">
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i" selected="@(i == ViewBag.SelectedMonth)">
                                        @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label">Year</label>
                            <select name="year" class="form-select">
                                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                                {
                                    <option value="@y" selected="@(y == ViewBag.SelectedYear)">@y</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter me-2"></i>Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-primary text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Total Basic Salary</h6>
                    <h4 class="mb-0">?@ViewBag.TotalBasicSalary.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-success text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Total Bonus</h6>
                    <h4 class="mb-0">?@ViewBag.TotalBonus.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-danger text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Total Deductions</h6>
                    <h4 class="mb-0">?@ViewBag.TotalDeductions.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-info text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Total Net Salary</h6>
                    <h4 class="mb-0">?@ViewBag.TotalNetSalary.ToString("N0")</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Salary Details Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>Salary Details for @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(ViewBag.SelectedMonth) @ViewBag.SelectedYear
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Employee ID</th>
                                        <th>Name</th>
                                        <th>Department</th>
                                        <th>Basic Salary</th>
                                        <th>Bonus</th>
                                        <th>Deductions</th>
                                        <th>Net Salary</th>
                                        <th>Present Days</th>
                                        <th>Working Days</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payslip in Model)
                                    {
                                        <tr>
                                            <td>EMP-@payslip.Employee.EmployeeId.ToString("D4")</td>
                                            <td>@payslip.Employee.FirstName @payslip.Employee.LastName</td>
                                            <td>@payslip.Employee.Department</td>
                                            <td>?@payslip.BasicSalary.ToString("N0")</td>
                                            <td class="text-success">?@payslip.Bonus.ToString("N0")</td>
                                            <td class="text-danger">?@payslip.Deductions.ToString("N0")</td>
                                            <td class="fw-bold">?@payslip.NetSalary.ToString("N0")</td>
                                            <td>@payslip.PresentDays</td>
                                            <td>@payslip.WorkingDays</td>
                                            <td>
                                                @if (payslip.Status == "Paid")
                                                {
                                                    <span class="badge bg-success">Paid</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Generated</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-info">
                                        <td colspan="3"><strong>Total</strong></td>
                                        <td><strong>?@ViewBag.TotalBasicSalary.ToString("N0")</strong></td>
                                        <td class="text-success"><strong>?@ViewBag.TotalBonus.ToString("N0")</strong></td>
                                        <td class="text-danger"><strong>?@ViewBag.TotalDeductions.ToString("N0")</strong></td>
                                        <td class="fw-bold"><strong>?@ViewBag.TotalNetSalary.ToString("N0")</strong></td>
                                        <td colspan="3"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-file-invoice"></i>
                            <h4 class="mt-3">No Salary Records</h4>
                            <p class="text-muted">No payslips have been generated for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
