@model IEnumerable<EmployeeManagementSystem.Controllers.EmployeeOverviewDto>

@{
    ViewData["Title"] = "Employee Overview Report";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-gradient">
                    <i class="fas fa-users me-2"></i>Employee Overview Report
                </h2>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Reports
                </a>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card bg-gradient-primary text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Total Employees</h6>
                    <h2 class="mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-gradient-success text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Total Bonus Paid</h6>
                    <h2 class="mb-0">?@Model.Sum(e => e.TotalBonus).ToString("N0")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-gradient-info text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-uppercase mb-2">Total Salary Paid</h6>
                    <h2 class="mb-0">?@Model.Sum(e => e.TotalSalaryPaid).ToString("N0")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Details Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>Employee Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="employeeTable">
                            <thead>
                                <tr>
                                    <th>Employee ID</th>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Department</th>
                                    <th>Basic Salary</th>
                                    <th>Total Bonus</th>
                                    <th>Total Salary Paid</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>EMP-@item.Employee.EmployeeId.ToString("D4")</td>
                                        <td>@item.Employee.FirstName @item.Employee.LastName</td>
                                        <td>@item.Employee.Position</td>
                                        <td>@item.Employee.Department</td>
                                        <td>?@item.Employee.BasicSalary.ToString("N0")</td>
                                        <td class="text-success">?@item.TotalBonus.ToString("N0")</td>
                                        <td class="fw-bold">?@item.TotalSalaryPaid.ToString("N0")</td>
                                        <td>
                                            @if (item.Employee.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Admin" asp-action="EmployeeDetails" asp-route-id="@item.Employee.EmployeeId" 
                                               class="btn btn-sm btn-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-info">
                                    <td colspan="5"><strong>Total</strong></td>
                                    <td class="text-success"><strong>?@Model.Sum(e => e.TotalBonus).ToString("N0")</strong></td>
                                    <td class="fw-bold"><strong>?@Model.Sum(e => e.TotalSalaryPaid).ToString("N0")</strong></td>
                                    <td colspan="2"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
